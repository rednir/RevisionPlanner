<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
	         xmlns:viewmodel="clr-namespace:RevisionPlanner.ViewModel"
	         x:DataType="viewmodel:UserSubjectViewModel"
             x:Class="RevisionPlanner.View.Components.UserSubjectView">
    <Frame Margin="16">
        <VerticalStackLayout>
            <Label FontSize="Header" Text="{Binding Name}" />
            <Label FontSize="Caption" Text="{Binding Subtext}" />
	    </VerticalStackLayout>
    </Frame>
</ContentView>

