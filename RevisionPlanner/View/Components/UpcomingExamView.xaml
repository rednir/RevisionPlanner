<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
	         xmlns:viewmodel="clr-namespace:RevisionPlanner.ViewModel"
	         x:DataType="viewmodel:UpcomingExamViewModel"
             x:Class="RevisionPlanner.View.Components.UpcomingExamView">
    <Frame Margin="16">
        <VerticalStackLayout>
            <Label FontSize="Header" Text="{Binding Name}" />
            <Label FontSize="Caption" Text="{Binding RemainingTimeText}" />
            <ProgressBar Margin="0,4,0,0" Progress="{Binding Progress}" />
	    </VerticalStackLayout>
    </Frame>
</ContentView>

