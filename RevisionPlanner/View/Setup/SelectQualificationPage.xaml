<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
	         xmlns:setup="clr-namespace:RevisionPlanner.ViewModel.Setup"
	         x:DataType="setup:SelectQualificationViewModel"
             x:Class="RevisionPlanner.View.SelectQualificationPage"
             Title="Qualification">
    <VerticalStackLayout Padding="16">
        <Button Text="GCSE"
                Command="{Binding GcseCommand}"
		        HeightRequest="64"
		        BackgroundColor="BlueViolet"
		        TextColor="White"
		        CornerRadius="16"/>
        <Button Text="A-Level"
                Command="{Binding ALevelCommand}"
		        HeightRequest="64"
		        BackgroundColor="Purple"
		        TextColor="White"
		        CornerRadius="16"/>
        <Button Text="Other"
                Command="{Binding OtherCommand}"
		        HeightRequest="64"
				CornerRadius="16"/>
    </VerticalStackLayout>
</ContentPage>
